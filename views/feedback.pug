extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Feedback
      
      // Feedback Form
      form(method='POST' action='/feedback')
        div.form-group
          label(for='summary') Summary:
          input#name.form-control(type='text', placeholder='summary' name='summary')
        div.form-group
          label(for='note') Notes:
          input#email.form-control(type='text', placeholder='notes' name='note')
        button.btn.btn-primary(type='submit') Submit Feedback
