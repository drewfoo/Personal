              .col-xs-12.col-sm-6.mb-4
                label.g-color-gray-dark-v2.g-font-weight-600.g-font-size-13 Password:
                input.form-control.g-color-black.g-bg-white.g-bg-white--focus.g-brd-gray-dark-v4.g-brd-primary--hover.rounded.g-py-15.g-px-15(type='password' placeholder='********' name='password')
