extends ../layout

block sections
  h1.g-font-weight-300.g-font-size-28.g-color-black.g-mb-40 Panel Variations
  .row
    .col-md-12
  if sectionContent
    each val in sectionContent
      .card.g-brd-gray-light-v7.g-rounded-3.g-mb-30
                header.card-header.g-brd-bottom-none.g-px-15.g-px-30--sm.g-pt-15.g-pt-20--sm.g-pb-10.g-pb-15--sm
                  .media
                    h3.d-flex.align-self-center.text-uppercase.g-font-size-12.g-font-size-default--md.g-color-black.g-mr-10.mb-0 #{val.name}
                    //- .media-body.d-flex.justify-content-end
                    //-   a.hs-admin-panel.u-link-v5.g-font-size-20.g-color-gray-light-v3.g-color-secondary--hover(href='#!')
                    //-   a.hs-admin-reload.u-link-v5.g-font-size-20.g-color-gray-light-v3.g-color-secondary--hover.g-ml-20(href='#!')
                .card-block.g-pa-15.g-pa-30--sm
                  h4.g-font-weight-300.g-font-size-18.g-font-size-22--md.g-color-black.g-mb-10 #{val.header}
                  p.g-font-weight-300.g-color-gray-dark-v6.mb-0 #{val.body}
                each item in val.listitems 
                  li.p.g-font-weight-300.g-color-gray-dark-v6.mb-0 #{item}
                each value in val.faqitems
                  h4.g-font-weight-300.g-font-size-18.g-font-size-22--md.g-color-black.g-mb-10 #{value.question}
                  p.g-font-weight-300.g-color-gray-dark-v6.mb-0 #{value.answer}
  if referenceLinks.length
      .card.g-brd-gray-light-v7.g-rounded-3.g-mb-30
                  header.card-header.g-brd-bottom-none.g-px-15.g-px-30--sm.g-pt-15.g-pt-20--sm.g-pb-10.g-pb-15--sm
                    .media
                      h3.d-flex.align-self-center.text-uppercase.g-font-size-12.g-font-size-default--md.g-color-black.g-mr-10.mb-0 Reference Links
                      //- .media-body.d-flex.justify-content-end
                      //-   a.hs-admin-panel.u-link-v5.g-font-size-20.g-color-gray-light-v3.g-color-secondary--hover(href='#!')
                      //-   a.hs-admin-reload.u-link-v5.g-font-size-20.g-color-gray-light-v3.g-color-secondary--hover.g-ml-20(href='#!')
                  .card-block.g-pa-15.g-pa-30--sm
                  each link in referenceLinks
                    p.g-font-weight-300.g-color-gray-dark-v6.mb-0 #{link}
